// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    String @id @default(cuid())
  email String @unique
  name  String
  role  String // "admin" or "member"
  passwordHash String?
  meetings   Meeting[] @relation("OrganizerMeetings")
}

model Meeting {
  id           String   @id @default(cuid())
  title        String
  date         DateTime
  duration     Int
  participants String // Comma-separated list of emails
  description  String?
  organizer    User     @relation("OrganizerMeetings", fields: [organizerId], references: [id])
  organizerId  String
  zoomAccount  ZoomAccount @relation(fields: [zoomAccountId], references: [id])
  zoomAccountId String
}

model ZoomAccount {
  id      String @id @default(cuid())
  email   String @unique
  meetings Meeting[]
}
