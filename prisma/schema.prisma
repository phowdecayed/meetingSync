generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.1.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                  String    @id @default(cuid())
  email               String    @unique
  name                String
  role                String // 'admin' or 'member'
  meetingsOrganized   Meeting[] @relation("Organizer")
}

model Meeting {
  id            String      @id @default(cuid())
  title         String
  date          DateTime
  duration      Int
  participants  String // Comma-separated emails
  description   String?
  organizer     User        @relation("Organizer", fields: [organizerId], references: [id])
  organizerId   String
  zoomAccount   ZoomAccount @relation(fields: [zoomAccountId], references: [id])
  zoomAccountId String
}

model ZoomAccount {
  id       String    @id @default(cuid())
  email    String    @unique
  meetings Meeting[]
}
